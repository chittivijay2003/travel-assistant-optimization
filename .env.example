# =============================================================================
# ENTERPRISE TRAVEL ASSISTANT CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME=travel-assistant-optimization
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_TIMEOUT=30
API_BASE_URL=http://localhost:8000

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_FLASH_MODEL=gemini-1.5-flash
GEMINI_PRO_MODEL=gemini-1.5-pro

# External API Keys (Travel Services)
OPENWEATHER_API_KEY=your_openweather_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Memory Configuration (Mem0)
MEM0_API_KEY=your_mem0_api_key_here
MEM0_USER_ID=default_user
MEM0_ORGANIZATION_NAME=travel_assistant

# Semantic Cache Configuration
CACHE_TTL=3600
CACHE_SIMILARITY_THRESHOLD=0.85
SEMANTIC_CACHE_ENABLED=true

# Request Fingerprinting
FINGERPRINT_ALGORITHM=sha256
FINGERPRINT_SALT=your_secret_salt_here

# File Storage & Logging
UPLOAD_FOLDER=uploads/
LOG_LEVEL=INFO
LOG_FILE=logs/travel_assistant.log
LOG_ROTATION=10MB
LOG_RETENTION=30

# Travel-specific Configuration
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en
MAX_DESTINATIONS_PER_TRIP=10
SEARCH_RADIUS_KM=50

# Performance & Security
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
JWT_SECRET_KEY=your_jwt_secret_key_here
SESSION_TIMEOUT=7200

# UI/UX Configuration
UI_THEME=light
ENABLE_METRICS_DASHBOARD=true
ENABLE_CHAT_INTERFACE=true
CHAT_HISTORY_LIMIT=50